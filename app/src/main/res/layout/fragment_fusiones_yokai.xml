<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tabbedViews.fragments.FusionesYokai">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/logoEspinyan"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/espinyan"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/textEspinyan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Espinyan"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                />

            <ImageView
                android:id="@+id/logoPelochnyan"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/pelochnyan"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/textPelochnyan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Pelochnyan"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>