<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/main_background"
    tools:context=".Profile">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewLogo"
        android:layout_width="87dp"
        android:layout_height="82dp"
        android:layout_margin="5dp"
        android:elevation="10dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        >

        <ImageView
            android:id="@+id/userLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logoprovisional"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/datosTitle"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:text="Datos Personales"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/cardViewLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linearLayout1" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="340dp"
        android:layout_height="68dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/datosTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linearLayout2"
        android:background="@drawable/roundedborderprofile"
        android:layout_marginVertical="-5dp"
        >

        <TextView
            android:id="@+id/nameTitle"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="@string/underlineName"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingHorizontal="15dp"
            android:paddingTop="10dp"/>

        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Antonio"
            android:textColor="@color/black"
            android:paddingHorizontal="15dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="340dp"
        android:layout_height="68dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/linearLayout1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linearLayout3"
        android:background="@drawable/roundedborderprofile"
        android:layout_marginVertical="-5dp"
        >

        <TextView
            android:id="@+id/idTitle"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="@string/underlineId"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingHorizontal="15dp"
            android:paddingTop="10dp"/>

        <TextView
            android:id="@+id/numId"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="EU-1234567890"
            android:textColor="@color/black"
            android:paddingHorizontal="15dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="340dp"
        android:layout_height="68dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/cerrarSesion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout2"
        android:background="@drawable/roundedborderprofile"
        android:layout_marginVertical="-5dp"
        >

        <TextView
            android:id="@+id/obtenidosTitle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="@string/underlineObtenidos"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingHorizontal="15dp"
            android:paddingTop="10dp"/>

        <TextView
            android:id="@+id/numObtenidos"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="105/300"
            android:textColor="@color/black"
            android:paddingHorizontal="15dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/cerrarSesion"
        android:layout_width="108dp"
        android:layout_height="17dp"
        android:text="Cerrar SesiÃ³n"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/main"
        android:layout_marginBottom="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="20dp"
        app:layout_constraintHorizontal_bias="0.8"
        android:textSize="15dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
