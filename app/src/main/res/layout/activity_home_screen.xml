<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/menuBar"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_menu_24" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="10dp"
            app:cardCornerRadius="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginRight="27dp"
            >

            <ImageView
                android:id="@+id/logoProvisional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/logoprovisional" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        style="@style/CustomSearchViewStyle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:queryHint="Introduzca Yokai"
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewButton_tribus"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="40dp"
        android:backgroundTint="@color/button_shadow"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView"
        app:layout_constraintEnd_toStartOf="@+id/cardViewButton_elementos"
        >

        <Button
            android:id="@+id/tribus_button"
            android:layout_width="125dp"
            android:layout_height="55dp"
            android:backgroundTint="@color/tribu_color_guapo"
            android:elevation="50dp"
            android:fontFamily="@font/montserrat"
            android:text="Tribus"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewButton_elementos"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="@color/button_shadow"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@+id/searchView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardViewButton_tribus"
        >

    <Button
        android:id="@+id/elementos_button"
        android:layout_width="125dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/tribu_color_amable"
        android:elevation="50dp"
        android:fontFamily="@font/montserrat"
        android:text="Elementos"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewButton_rango"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:backgroundTint="@color/button_shadow"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewButton_tribus"
        app:layout_constraintEnd_toStartOf="@+id/cardViewButton_fases"
        >

        <Button
            android:id="@+id/rangos_button"
            android:layout_width="125dp"
            android:layout_height="55dp"
            android:backgroundTint="@color/tribu_color_siniestro"
            android:elevation="50dp"
            android:fontFamily="@font/montserrat"
            android:text="Rango"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewButton_fases"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="@color/button_shadow"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cardViewButton_elementos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardViewButton_rango"
        >

        <Button
            android:id="@+id/fases_button"
            android:layout_width="125dp"
            android:layout_height="55dp"
            android:backgroundTint="@color/tribu_color_escurridiza"
            android:elevation="50dp"
            android:fontFamily="@font/montserrat"
            android:text="Fases"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="434dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewButton_fases"
        >

        <TextView
            android:id="@+id/textView_populares"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Populares"
            android:textAlignment="center"
            android:textColor="#020202"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/populares_guapo"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/yokai_view_guapa"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_populares">

            <TextView
                android:id="@+id/textView_jibanyan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/montserrat"
                android:text="Jibanyan"
                android:textColor="#020202"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/favButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/favorite_heart" />

            <TextView
                android:id="@+id/textView_jibanyan_jp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/montserrat"
                android:text="ジバニャン"
                android:textColor="#020202"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_jibanyan" />

            <ImageView
                android:id="@+id/logo_tribu_guapa"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_jibanyan_jp"
                app:srcCompat="@drawable/guapo" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/populares_valiente"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/yokai_view_valiente"
            app:layout_constraintTop_toBottomOf="@+id/populares_guapo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <TextView
                android:id="@+id/textView_shogunyan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Shogunyan"
                android:layout_marginLeft="20dp"
                android:textColor="#020202"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <ImageView
                android:id="@+id/favButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/favorite_heart" />

            <TextView
                android:id="@+id/textView_shogunyan_jp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="ブシニャン"
                android:layout_marginLeft="20dp"
                android:textColor="#020202"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_marginTop="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_shogunyan"
                />

            <ImageView
                android:id="@+id/logo_tribu_valiente"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_shogunyan_jp"
                app:srcCompat="@drawable/valiente" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/populares_misterioso"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/yokai_view_misterioso"
            app:layout_constraintTop_toBottomOf="@+id/populares_valiente"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <TextView
                android:id="@+id/textView_kyubi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Kyubi"
                android:layout_marginLeft="20dp"
                android:textColor="#020202"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <ImageView
                android:id="@+id/favButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/favorite_heart" />

            <TextView
                android:id="@+id/textView_kyubi_jp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="キュウビ"
                android:layout_marginLeft="20dp"
                android:textColor="#020202"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_marginTop="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_kyubi"
                />

            <ImageView
                android:id="@+id/logo_tribu_misterioso"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_kyubi_jp"
                app:srcCompat="@drawable/misterioso" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>